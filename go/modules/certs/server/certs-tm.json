{
  "@context": [
    "https://www.w3.org/2022/wot/td/v1.1",
    {
      "hiveot": "https://www.hiveot.net/vocab/v0.1"
    }
  ],
  "@type": ["tm:ThingModel", "CertsService"],
  "id": "CertsService",
  "title": "Certificate Service",
  "description": "HiveOT certificate management service",
  "version": {
    "instance": "1.0.0"
  },
  "created": "2026-01-00T00:00:00.000Z",
  "modified": "2026-01-00T00:00:00.000Z",
  "support": "https://www.github.com/hiveot/hivekit",
  "base": "{{DIRECTORY_BASE_URL}}",
  "allow": ["admin"],

  "schemaDefinitions": {},

  "properties": {},

  "events": {},

  "actions": {
    "getCACert": {
      "title": "Get CA Cert",
      "description": "Return the configured CA certificate.",
      "idempotent": true,
      "output": {
        "title": "CA Cert PEM",
        "description": "CA certificate in PEM format",
        "type": "string"
      }
    },
    "getServerCert": {
      "title": "Get Server Cert",
      "description": "Return the default server certificate.",
      "idempotent": true,
      "output": {
        "title": "Server Cert PEM",
        "description": "Server certificate in PEM format",
        "type": "string"
      }
    }
  }
}
